@model shaker.Models.Posts.PostCreateModel

    <form asp-action="Create"
          asp-controller="Blog">

        <h1>Create a new post</h1>

        <div class="row">

            <div class="col-12 mb-1">
                <div class="jumbotron">

                    <div class="form-group">
                        <label asp-for="@Model.Description">Description</label>

                        <input type="text"
                               class="form-control"
                               asp-for="@Model.Description"
                               aria-describedby="description"
                               placeholder="Description">

                        <small class="form-text text-muted">A brief description of the post.</small>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Content">Content</label>

                        <textarea class="form-control"
                                  asp-for="@Model.Content"
                                  aria-describedby="content"
                                  placeholder="Content"></textarea>
                    </div>

                </div>
            </div>

            <div class="col-12">
                <button class="btn btn-success"
                        type="submit">
                    Create
                </button>
            </div>
        </div>

    </form>