@model shaker.Models.Posts.PostCreateModel

<form asp-action="Create"
        asp-controller="Blog">

    <div class="row">

        <h1>Create a new post</h1>

        <div class="col-12 mb-1">
            <div class="jumbotron">

                <label asp-for="@Model.Description">
                    Description
                </label>
                <br />
                <input asp-for="@Model.Description" />
                <br />

                <label asp-for="@Model.Content">
                    Content
                </label>
                <br />
                <input asp-for="@Model.Content" />

            </div>
        </div>

        <div class="col-12">
            <button class="btn btn-success"
                    type="submit">
                Create
            </button>
        </div>
    </div>

</form>